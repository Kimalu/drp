<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
	<context-param>
		<param-name>page-size</param-name>
		<param-value>2</param-value>
	</context-param>
	
	<filter>
		<filter-name>CharsetEncodingFilter</filter-name>
		<filter-class>com.bjpowernode.drp.util.filter.CharsetEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>GB18030</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CharsetEncodingFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>CharsetEncodingFilter</filter-name>
		<url-pattern>/servlet/*</url-pattern>		
	</filter-mapping>
	
	<servlet>
		<servlet-name>ClientIdValidateServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.util.servlet.ClientIdValidateServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ClientIdValidateServlet</servlet-name>
		<url-pattern>/servlet/ClientIdValidateServlet</url-pattern>
	</servlet-mapping>

	<!-- 
	<servlet-mapping>
		<servlet-name>ClientIdValidateServlet</servlet-name>
		<url-pattern>/servlet/Test</url-pattern>
	</servlet-mapping>
	 -->
	 
	<servlet>
		<servlet-name>FiscalYearPeriodValidateServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.util.servlet.FiscalYearPeriodValidateServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FiscalYearPeriodValidateServlet</servlet-name>
		<url-pattern>/servlet/FiscalYearPeriodValidateServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PasswordValidateServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.util.servlet.PasswordValidateServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>PasswordValidateServlet</servlet-name>
		<url-pattern>/servlet/PasswordValidateServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ShowAddItemServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.ShowAddItemServlet</servlet-class>
	</servlet>	 
	
	<servlet-mapping>
		<servlet-name>ShowAddItemServlet</servlet-name>
		<url-pattern>/servlet/basedata/ShowAddItemServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddItemServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.AddItemServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AddItemServlet</servlet-name>
		<url-pattern>/servlet/basedata/AddItemServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SearchItemServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.SearchItemServlet</servlet-class>
		<init-param>
			<param-name>page-size</param-name>
			<param-value>3</param-value>
		</init-param>
	</servlet>	
	
	<servlet-mapping>
		<servlet-name>SearchItemServlet</servlet-name>
		<url-pattern>/servlet/basedata/SearchItemServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ShowModifyItemServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.ShowModifyItemServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ShowModifyItemServlet</servlet-name>
		<url-pattern>/servlet/basedata/ShowModifyItemServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ModifyItemServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.ModifyItemServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ModifyItemServlet</servlet-name>
		<url-pattern>/servlet/basedata/ModifyItemServlet</url-pattern>		
	</servlet-mapping>
	
	<servlet>
		<servlet-name>FileUpload</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.test.FileUpload</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FileUpload</servlet-name>
		<url-pattern>/servlet/FileUpload</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ShowItemUploadServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.ShowItemUploadServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ShowItemUploadServlet</servlet-name>
		<url-pattern>/servlet/basedata/ShowItemUploadServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ItemUploadServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.basedata.web.ItemUploadServlet</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ItemUploadServlet</servlet-name>
		<url-pattern>/servlet/basedata/ItemUploadServlet</url-pattern>
	</servlet-mapping>
	
	<!-- 
	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.util.InitServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	 -->
	 
	<servlet>
		<servlet-name>FlowcardServlet</servlet-name>
		<servlet-class>com.bjpowernode.drp.flowcard.web.FlowcardServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FlowcardServlet</servlet-name>
		<url-pattern>/servlet/flowcard/FlowcardServlet</url-pattern>
	</servlet-mapping>
	
	<listener>
		<listener-class>com.bjpowernode.drp.util.listener.InitListener</listener-class>
	</listener>
	
	<error-page>
		<exception-type>com.bjpowernode.drp.util.AppException</exception-type>
		<location>/error.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/http_error.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>500</error-code>
		<location>/http_error.jsp</location>
	</error-page>
</web-app>
